
<div id="menu-holder" class="card-material">
    <div class="title-holder">
      Menu

      <div class="button-holder" style="--padding: 2px;">
        <div id= "settings-open-button" class="svg-holder button">
          <svg  style="padding: var(--padding);"
          xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-settings-icon lucide-settings">
